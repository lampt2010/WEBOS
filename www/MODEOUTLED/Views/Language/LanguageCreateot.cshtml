@model onsoft.Models.Language
@{
    ViewBag.Title = "Thêm mới ngôn ngữ";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
                {
                    setupFormValidation: function () {
                        //validation rules
                        $("#LanguageCreateot-form").validate({
                            rules: {
                                Name: "required",
                                Title: "required",
                                Description: "required",
                                Keyword: "required",
                                Ord: {
                                    required: true,
                                    number: true
                                }
                            },
                            messages: {
                                Name: "Phải nhập tên nhóm",
                                Title: "Phải nhập tiêu đề",
                                Description: "Phải nhập miêu tả",
                                Keyword: "Phải nhập từ khóa",
                                Ord: {
                                    required: "Phải nhập thứ tự",
                                    number: "Phải nhập kiểu số"
                                }
                            },
                            submitHandler: function (form) {
                                form.submit();
                            }
                        });
                    }
                }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);

    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../Language/LanguageIndexot'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='../../Language/LanguageIndexot'>Danh mục ngôn ngữ</a></li>
                <li class='Last'><span>Thêm mới ngôn ngữ</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("LanguageCreateot", "Language", FormMethod.Post, new { enctype = "multipart/form-data", @id = "LanguageCreateot-form", @class = "validate-form" }))
        {
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm mới ngôn ngữ</h4>

                        <!-- Button -->
                        <div class="ui-corner-top ui-corner-bottom">
                            <div id="toolbox">
                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td align="center">

                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>

                                            </td>
                                            <td align="center">

                                                <a title="Quay lại" class="toolbar btn btn-info" href="../../Language/LanguageIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Thêm mới ngôn ngữ
                            </h4>

                            <div class="FloatMenuBar">

                                <div class="ui-corner-top ui-corner-bottom">
                                    <div id="Div1">

                                        <div style="float: right;" class="toolbox-content">

                                            <table class="toolbar">
                                                <tr>
                                                    <td align="center">
                                                        <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                                    </td>
                                                    <td align="center">
                                                        <a title="Quay lại" class="toolbar btn btn-info" href="../../Language/LanguageIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->
                    <!-- widget-body -->
                    <div class="widget-body">

                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">
                                    <tr>
                                        <td class="key">
                                            Tên ngôn ngữ <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Name, new { @class = "text",  })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tên ngôn ngữ
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tên ngôn ngữ
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Mã <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.Code, new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Mã ngôn ngữ
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Mã ngôn ngữ
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Hình ảnh<span style="color:red">(*)</span></td>
                                        <td>@Html.TextBoxFor(model => model.Images, new { @class = "" })<input id="SelectImages" type="button" value="Chọn ảnh" class="bottom" /></td>
                                    </tr>



                                    <tr>
                                        <td class="key">
                                            Kích hoạt
                                        </td>
                                        <td>
                                            @Html.CheckBox("Active", true)
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Kích hoạt
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Kích hoạt
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>


                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body -->

                </div>
            </div>
        }
    </div>
</div>
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Images").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>