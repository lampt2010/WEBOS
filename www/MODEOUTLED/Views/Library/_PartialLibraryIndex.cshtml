<!--Ajax sử dụng sửa dữ liệu trực tiếp trên form-->
<script type="text/javascript">
    $(function () {
        $('#msg').hide();
        // Ajax sử dụng cho change active
        $(".Active").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Library/ChangeActive", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });
        // Ajax sử dụng cho change index
        $(".Index").click(function () {
            var Id = $(this).attr("id");
            clearUpdateMessage();
            $.post("/Library/ChangeIndex", { "id": Id },
                function (data) {
                    $('#msg').show();
                    $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                    $('#msg').fadeOut(5000);
                });
        });
        // Ajax sử dụng cho change Name
        $(".Namep").change(function () {
            var id = $(this).attr("id");
            var name = $(this).val();
            if (name == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập tên thư viện.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Library/ChangeLibrary", { "id": id, "name": name },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });
        $(".Title").change(function () {
            var id = $(this).attr("id");
            var title = $(this).val();
            if (title == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập tiêu đề.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Library/ChangeLibrary", { "id": id, "title": title },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });


    });

    function clearUpdateMessage() {
        $('#update-message').text("");
    }

    function htmlDecode(value) {
        if (value) {
            return $('<div />').html(value).text();
        }
        else {
            return '';
        }
    }
</script>

