@model onsoft.Models.Library
@{
    ViewBag.Title = "Chỉnh sửa thư viện";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}
@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#LanguageEdit-form").validate({
                        rules: {
                            GroupLanguage: "required",
                            Name: "required"
                        },
                        messages: {
                            GroupLanguage: "Vui lòng chọn nhóm tin cần thêm!",
                            Name: "Nhập tiêu đề tin cần thêm!"
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../Language/LanguageIndexot'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='../../Language/LanguageIndexot'>Danh mục thư viện</a></li>
                <li class='Last'><span>Chỉnh sửa thư viện</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("LanguageEdit", "Language", new { id = @Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "LanguageEdit-form", @class = "validate-form" }))
        {
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm mới thư viện</h4>

                        <!-- Button -->
                        <div class="ui-corner-top ui-corner-bottom">
                            <div id="toolbox">
                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td align="center">

                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>

                                            </td>
                                            <td align="center">

                                                <a title="Quay lại" class="toolbar btn btn-info" href="../../Language/LanguageIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Chỉnh sửa thư viện
                            </h4>
                            <div class="FloatMenuBar">

                                <div class="ui-corner-top ui-corner-bottom">
                                    <div id="Div1">

                                        <div style="float: right;" class="toolbox-content">

                                            <table class="toolbar">
                                                <tr>
                                                    <td align="center">
                                                        <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                                    </td>
                                                    <td align="center">
                                                        <a title="Quay lại" class="toolbar btn btn-info" href="../../Language/LanguageIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->
                    <!-- widget-body -->
                    <div class="widget-body">
                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">

                                    <tr>
                                        <td class="key">
                                           Nhóm Thư viện <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.DropDownList("GroupLibrary", " === Nhóm thư viện ===")
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tên nhóm thư viện
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tên nhóm thư viện (Ví dụ: Nhóm 1)
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Tên thư viện <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Name, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tên thư viện
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tên của thư viện (Ví dụ: Thư viện ảnh 1)
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">
                                            Ảnh tin <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Image, "", new { @class = "text" })&nbsp;<input id="SelectImages" type="button" value="Chọn ảnh" />
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Ảnh tin
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Ảnh mô tả của tin
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">
                                            Tiêu đề
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Title, "", new { style = "width:350px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tiêu đề
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tiêu đề của thư viện
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>


                                    <tr>
                                        <td class="key">
                                            Mô tả chi tiết
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Description, "", new { style = "width:350px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Mô tả chi tiết
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Mô tả chi tiết của tin
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">
                                            Từ khóa
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Keyword, "", new { style = "width:350px" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Từ khóa
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Từ khóa của tin
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                 
                                    <tr>
                                        <td class="key">
                                            Kích hoạt
                                        </td>
                                        <td>
                                            @Html.CheckBoxFor(m => m.Action.Value)
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Kích hoạt
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Kích hoạt
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body -->

                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    
</script>